# Gemini API Key (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# LemonFox API Key (Get from LemonFox AI)
LEMONFOX_API_KEY=your_lemonfox_api_key_here

# Google Cloud Service Account Key (Optional - for Speech-to-Text)
# Base64 encoded JSON service account key
# If not provided, will use Gemini for basic transcription
GOOGLE_CLOUD_KEY=your_base64_encoded_service_account_key

# JWT Secret Key (Generate a secure random string)
JWT_SECRET_KEY=your_secret_key_here-change-this-to-random-string

# MongoDB URI (Optional - for production)
# MONGODB_URI=mongodb://localhost:27017/ai_playground
